rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // 1. USERS COLLECTION (UPDATED)
    match /users/{userId} {
      allow read: if isSignedIn();
      
      // FIX: Allow users to update THEIR OWN profile (e.g. saving fcmToken)
      allow update: if request.auth.uid == userId;
      
      // Still block creation/deletion (Admin functions handle that)
      allow create, delete: if false; 
    }

    // 2. GAME DATA (Keep existing)
    match /stations/{stationId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /groups/{groupId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /sideQuests/{questId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /announcements/{msgId} {
      allow read: if isSignedIn();
      // Allow creation if user is OGL or SM (for help requests)
      allow create: if isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['OGL', 'SM', 'ADMIN'];
      allow update, delete: if false;
    }
    match /scoreLog/{logId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /houses/{houseId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /game/config {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // 3. CHATS (Keep existing)
    match /chats/{chatId} {
      allow read: if isSignedIn();
      allow update: if isSignedIn();
      allow create, delete: if false;
      match /messages/{msgId} {
        allow read: if isSignedIn();
        allow write: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
